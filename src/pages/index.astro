---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServicesSection from '../components/ServicesSection.astro';
import AboutSection from '../components/AboutSection.astro';
import StatisticsSection from '../components/StatisticsSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';
import CTASection from '../components/CTASection.astro';
import FAQSection from '../components/FAQSection.astro';
---

<BaseLayout 
  title="Türkel Global Stands - Fuar Standı Tasarımı ve Üretimi"
  description="Fuar standı tasarımı ve üretiminde uzman şirket. Özel dekor stant, modüler stant ve grup stant çözümleri ile markanızı fuar alanında en güçlü şekilde temsil ediyoruz."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden h-screen min-h-[600px] max-h-[980px]" id="hero-slider">
    <!-- Slider Container -->
    <div class="relative w-full h-full">
      <!-- Slide 1 -->
      <div class="hero-slide active absolute inset-0" data-slide="0">
        <div class="absolute inset-0 h-full">
          <img 
            src="/hero-bg.jpg" 
            alt="Türkel Global Stands - Elcom Fuar Standı" 
            class="w-full h-full object-cover"
            loading="eager"
            width="1920"
            height="824"
          />
        </div>
      </div>

      <!-- Slide 2 -->
      <div class="hero-slide absolute inset-0 opacity-0" data-slide="1">
        <div class="absolute inset-0 h-full">
          <img 
            src="/hero-bg-2.jpg" 
            alt="Türkel Global Stands - Mebel Fuar Standı" 
            class="w-full h-full object-cover"
            loading="lazy"
            width="1920"
            height="824"
          />
        </div>
      </div>

      <!-- Slide 3 -->
      <div class="hero-slide absolute inset-0 opacity-0" data-slide="2">
        <div class="absolute inset-0 h-full">
          <img 
            src="/hero-bg-3.jpg" 
            alt="Türkel Global Stands - İtm Fuar Standı" 
            class="w-full h-full object-cover"
            loading="lazy"
            width="1920"
            height="824"
          />
        </div>
      </div>
    </div>
    
    <!-- Overlay Content -->
    <div class="absolute inset-0 z-10">
      <div class="container h-full">
        <div class="relative h-full">
          <!-- Scroll Indicator - Bottom Left (Lower Position) -->
          <div class="absolute bottom-16 left-0 md:left-0 px-4 md:px-0">
            <div class="flex items-center space-x-2 md:space-x-4 text-sm md:text-body text-grey">
              <span class="font-bold text-grey" id="current-slide">01</span>
              <div class="w-8 md:w-12 h-px bg-grey"></div>
              <span class="text-grey">03</span>
            </div>
          </div>
          
          <!-- Project Info Card - Bottom Right (Shifted More Right) -->
          <div class="absolute bottom-0 right-0 w-full px-4 md:max-w-4xl md:pr-8 hidden md:block">
            <div class="bg-navy text-white p-4 md:p-8 rounded-lg ml-auto w-full md:w-auto md:min-w-[900px]">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between space-y-4 md:space-y-0">
                <!-- Left Section: Project Info -->
                <div class="flex-shrink-0">
                  <p class="text-body mb-2">Projeler</p>
                  <h1 class="text-2xl md:text-4xl font-semibold text-white leading-tight max-w-md" id="slide-title">
                    Modern Premium Stant Tasarımı
                  </h1>
                </div>
                
                <!-- Center Section: Details Grid -->
                <div class="flex-1 md:mx-12">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-4 md:gap-x-8 gap-y-2 md:gap-y-4">
                    <div>
                      <p class="text-body opacity-50 mb-1">Lokasyon</p>
                      <p class="text-body" id="slide-location">Ukrayna</p>
                    </div>
                    <div>
                      <p class="text-body opacity-50 mb-1">Fuar Adı</p>
                      <p class="text-body" id="slide-fair">Elcom</p>
                    </div>
                    
                    <div>
                      <p class="text-body opacity-50 mb-1">Tarih</p>
                      <p class="text-body" id="slide-year">2019</p>
                    </div>
                    <div>
                      <p class="text-body opacity-50 mb-1">Şirket</p>
                      <p class="text-body" id="slide-company">Mutlusan</p>
                    </div>
                    
                    <div class="md:col-span-2">
                      <p class="text-body opacity-50 mb-1">Stant Tipi</p>
                      <p class="text-body" id="slide-type">Premium Stant</p>
                    </div>
                  </div>
                </div>
                
                <!-- Right Section: Navigation Arrows -->
                <div class="flex flex-row md:flex-col space-x-2 md:space-x-0 md:space-y-2 flex-shrink-0 justify-center md:justify-start">
                  <!-- Next Arrow - Points Right -->
                  <button id="next-slide" class="w-12 h-12 md:w-16 md:h-16 rounded-full border border-orange flex items-center justify-center hover:bg-orange transition-colors group">
                    <svg class="w-5 h-5 md:w-6 md:h-6 text-orange group-hover:text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </button>
                  <!-- Previous Arrow - Points Left -->
                  <button id="prev-slide" class="w-12 h-12 md:w-16 md:h-16 rounded-full border border-beige/30 flex items-center justify-center opacity-50 hover:opacity-100 hover:border-orange transition-all group">
                    <svg class="w-5 h-5 md:w-6 md:h-6 text-beige group-hover:text-orange" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Slider JavaScript -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const slides = [
          {
            title: "Modern Premium Stant Tasarımı",
            location: "Ukrayna",
            fair: "Elcom",
            year: "2019",
            company: "Mutlusan",
            type: "Premium Stant"
          },
          {
            title: "Modern Premium Stant Tasarımı",
            location: "Rusya",
            fair: "Mebel",
            year: "2022",
            company: "Ece Boya",
            type: "Premium Stant"
          },
          {
            title: "Modern Premium Stant Tasarımı",
            location: "Türkiye",
            fair: "İtm",
            year: "2022",
            company: "Lohia",
            type: "Premium Stant"
          }
        ];

        let currentSlide = 0;
        const totalSlides = slides.length;

        const slideElements = document.querySelectorAll('.hero-slide');
        const nextBtn = document.getElementById('next-slide');
        const prevBtn = document.getElementById('prev-slide');
        const currentSlideElement = document.getElementById('current-slide');

        // Update slide content
        function updateSlideContent(index: number) {
          const slide = slides[index];
          const titleEl = document.getElementById('slide-title');
          const locationEl = document.getElementById('slide-location');
          const fairEl = document.getElementById('slide-fair');
          const yearEl = document.getElementById('slide-year');
          const companyEl = document.getElementById('slide-company');
          const typeEl = document.getElementById('slide-type');
          
          if (titleEl) titleEl.textContent = slide.title;
          if (locationEl) locationEl.textContent = slide.location;
          if (fairEl) fairEl.textContent = slide.fair;
          if (yearEl) yearEl.textContent = slide.year;
          if (companyEl) companyEl.textContent = slide.company;
          if (typeEl) typeEl.textContent = slide.type;
          if (currentSlideElement) currentSlideElement.textContent = String(index + 1).padStart(2, '0');
        }

        // Show slide
        function showSlide(index: number) {
          slideElements.forEach((slide: Element, i: number) => {
            const htmlSlide = slide as HTMLElement;
            if (i === index) {
              htmlSlide.classList.add('active');
              htmlSlide.style.opacity = '1';
            } else {
              htmlSlide.classList.remove('active');
              htmlSlide.style.opacity = '0';
            }
          });
          updateSlideContent(index);
        }

        // Next slide
        function nextSlide() {
          currentSlide = (currentSlide + 1) % totalSlides;
          showSlide(currentSlide);
        }

        // Previous slide
        function prevSlide() {
          currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
          showSlide(currentSlide);
        }

        // Event listeners
        if (nextBtn) nextBtn.addEventListener('click', nextSlide);
        if (prevBtn) prevBtn.addEventListener('click', prevSlide);

        // Auto-slide (optional - every 5 seconds)
        setInterval(nextSlide, 5000);

        // Initialize
        showSlide(0);
      });
    </script>
  </section>

  <!-- About Section -->
  <AboutSection />

  <!-- Services Section -->
  <ServicesSection />

  <!-- Statistics Section -->
  <StatisticsSection />

  <!-- Projects Section -->
  <ProjectsSection />

  <!-- CTA Section -->
  <CTASection />

  <!-- FAQ Section -->
  <FAQSection />

  <!-- Partners/Logos Section -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-2 md:grid-cols-5 gap-8 items-center opacity-80 animate-on-scroll">
        <div class="flex justify-center">
          <div class="w-32 h-16 bg-grey/20 rounded flex items-center justify-center">
            <span class="text-grey text-sm">Logo 1</span>
          </div>
        </div>
        <div class="flex justify-center">
          <div class="w-32 h-16 bg-grey/20 rounded flex items-center justify-center">
            <span class="text-grey text-sm">Logo 2</span>
          </div>
        </div>
        <div class="flex justify-center">
          <div class="w-32 h-16 bg-grey/20 rounded flex items-center justify-center">
            <span class="text-grey text-sm">Logo 3</span>
          </div>
        </div>
        <div class="flex justify-center">
          <div class="w-32 h-16 bg-grey/20 rounded flex items-center justify-center">
            <span class="text-grey text-sm">Logo 4</span>
          </div>
        </div>
        <div class="flex justify-center">
          <div class="w-32 h-16 bg-grey/20 rounded flex items-center justify-center">
            <span class="text-grey text-sm">Logo 5</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>