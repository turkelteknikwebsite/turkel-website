<section class="py-section">
  <div class="container">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8">
        <!-- Section Header -->
        <div class="flex items-center space-x-4 animate-on-scroll">
          <div class="flex items-center space-x-4 text-body text-grey">
            <span class="font-bold" id="current-service">01</span>
            <div class="w-12 h-px bg-grey"></div>
            <span>06</span>
          </div>
        </div>
        
        <h2 class="section-heading animate-on-scroll">
          Hizmetlerimiz<span class="text-orange ml-2">/</span>
        </h2>
        
        <!-- Services List -->
        <div class="space-y-0 animate-on-scroll" id="services-list">
          <!-- Service 1 -->
          <div class="service-item border-b border-black py-6 group" data-service="01">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 md:space-x-6">
                <span class="text-sm md:text-body text-grey">01</span>
                <h3 class="text-lg md:text-h5 text-grey opacity-50 group-hover:text-black group-hover:opacity-100 transition-all">
                  Özel Dekor Stant
                </h3>
              </div>
              <button class="service-arrow w-10 h-10 md:w-12 md:h-12 rounded-full border border-orange flex items-center justify-center hover:bg-orange transition-all opacity-0 group-hover:opacity-100">
                <!-- Checkmark Icon -->
                <svg class="w-5 h-5 text-orange group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </button>
            </div>
          </div>
          
