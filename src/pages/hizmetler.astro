---
import BaseLayout from '../layouts/BaseLayout.astro';
import projectsData from '../data/projects.json';

// Ana kategorilere göre projeleri grupla
const projects = projectsData.projects;

// Stand Tasarımları projeleri (en çok kullanılan 3 alt kategori)
const standProjects = projects.filter(p => p.mainCategory === 'stand-tasarimlari');
const elektrikProjects = standProjects.filter(p => p.subCategory === 'elektrik').slice(0, 3);
const enerjiProjects = standProjects.filter(p => p.subCategory === 'enerji').slice(0, 3);
const otomotivProjects = standProjects.filter(p => p.subCategory === 'otomotiv').slice(0, 3);

// Milli Katılım projeleri
const milliKatilimProjects = projects.filter(p => p.mainCategory === 'milli-katilim').slice(0, 3);

// Podyum Tasarımları projeleri
const podyumProjects = projects.filter(p => p.mainCategory === 'podyum-tasarimlari').slice(0, 3);

// Grup Katılım projeleri (eğer varsa)
const grupKatilimProjects = projects.filter(p => p.mainCategory === 'grup-katilim').slice(0, 3);

// Grup katılım projesi var mı kontrol et
const hasGrupKatilimProjects = grupKatilimProjects.length > 0;
---

<BaseLayout 
  title="Hizmetlerimiz - Türkel Global Stands"
  description="Özel dekor stant, standart stant, premium modüler, premium ahşap, milli katılım stant, podyum üretimi ve özel tasarım hizmetlerimiz."
>
  <!-- Page Header -->
  <section class="py-16 bg-navy text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center animate-on-scroll">
        <h1 class="text-h4 font-hanken font-medium mb-4">
          Hizmetlerimiz
        </h1>
        <p class="text-body text-white/80 text-lg leading-relaxed">
          Fuar standı tasarımından üretimine, kurulumundan sökümüne kadar 
          tüm süreçlerde profesyonel hizmet sunuyoruz. Markanızı en güçlü 
          şekilde temsil edecek çözümler üretiyoruz.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Overview - Kompakt Tasarım -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-12 animate-on-scroll">
          <h2 class="section-heading mb-6">Hizmetlerimiz</h2>
          <p class="text-body text-grey max-w-3xl mx-auto">
            Fuar standı tasarımından üretimine, kurulumundan sökümüne kadar tüm süreçlerde profesyonel hizmet sunuyoruz.
          </p>
        </div>

        <!-- Hizmet Kartları Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
          
          <!-- Stand Tasarımları Kartı -->
          <div class="group bg-white rounded-xl shadow-sm border border-grey/10 overflow-hidden hover:shadow-lg transition-all duration-300 animate-on-scroll">
            <!-- Header -->
            <div class="bg-gradient-to-r from-orange to-orange/80 p-6 text-white">
              <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <span class="text-sm bg-white/20 px-3 py-1 rounded-full">32 Proje</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">Stand Tasarımları</h3>
              <p class="text-white/90 text-sm">Özel tasarım stant çözümleri</p>
            </div>
            
            <!-- Örnek Projeler Mini Grid -->
            <div class="p-4">
              <div class="grid grid-cols-3 gap-2 mb-4">
                {elektrikProjects.map((project) => (
                  <div class="aspect-square rounded-lg overflow-hidden">
                    <img 
                      src={project.mainImage} 
                      alt={project.title}
                      class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                    />
                  </div>
                ))}
              </div>
              
              <!-- Özellikler -->
              <div class="space-y-1.5 mb-4">
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-orange rounded-full mr-2 flex-shrink-0"></span>
                  Premium Ahşap Stant
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-orange rounded-full mr-2 flex-shrink-0"></span>
                  Premium Modüler Stant
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-orange rounded-full mr-2 flex-shrink-0"></span>
                  Özel Dekor Stant
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-orange rounded-full mr-2 flex-shrink-0"></span>
                  Modüler Sistem Stant
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-orange rounded-full mr-2 flex-shrink-0"></span>
                  Ahşap Dekor Stant
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-orange rounded-full mr-2 flex-shrink-0"></span>
                  Klasik Stant
                </div>
              </div>
              
              <!-- Buton -->
              <a 
                href="/projeler?category=stand-tasarimlari" 
                class="w-full inline-flex items-center justify-center px-4 py-2 bg-orange text-white text-sm font-medium rounded-lg hover:bg-orange/90 transition-colors"
              >
                Tüm Projeleri Görüntüle
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Milli Katılım Stantları Kartı -->
          <div class="group bg-white rounded-xl shadow-sm border border-grey/10 overflow-hidden hover:shadow-lg transition-all duration-300 animate-on-scroll">
            <!-- Header -->
            <div class="bg-gradient-to-r from-navy to-navy/80 p-6 text-white">
              <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <span class="text-sm bg-white/20 px-3 py-1 rounded-full">4 Proje</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">Milli Katılım Stantları</h3>
              <p class="text-white/90 text-sm">Koordineli ve güçlü imaj</p>
            </div>
            
            <!-- Örnek Projeler Mini Grid -->
            <div class="p-4">
              <div class="grid grid-cols-3 gap-2 mb-4">
                {milliKatilimProjects.map((project) => (
                  <div class="aspect-square rounded-lg overflow-hidden">
                    <img 
                      src={project.mainImage} 
                      alt={project.title}
                      class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                    />
                  </div>
                ))}
              </div>
              
              <!-- Özellikler -->
              <div class="space-y-1.5 mb-4">
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-navy rounded-full mr-2 flex-shrink-0"></span>
                  Koordineli Tasarım
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-navy rounded-full mr-2 flex-shrink-0"></span>
                  Güçlü İmaj & Temsil
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-navy rounded-full mr-2 flex-shrink-0"></span>
                  Maliyet Avantajı
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-navy rounded-full mr-2 flex-shrink-0"></span>
                  Profesyonel Hizmet
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-navy rounded-full mr-2 flex-shrink-0"></span>
                  Uluslararası Standart
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-navy rounded-full mr-2 flex-shrink-0"></span>
                  Tek Koordinasyon
                </div>
              </div>
              
              <!-- Buton -->
              <a 
                href="/projeler?category=milli-katilim" 
                class="w-full inline-flex items-center justify-center px-4 py-2 bg-navy text-white text-sm font-medium rounded-lg hover:bg-navy/90 transition-colors"
              >
                Tüm Projeleri Görüntüle
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Podyum Tasarımları Kartı -->
          <div class="group bg-white rounded-xl shadow-sm border border-grey/10 overflow-hidden hover:shadow-lg transition-all duration-300 animate-on-scroll">
            <!-- Header -->
            <div class="bg-gradient-to-r from-purple-600 to-purple-700 p-6 text-white">
              <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m0 0V3a1 1 0 011 1v4.586l2.707 2.707A1 1 0 0121 12v8a1 1 0 01-1 1H4a1 1 0 01-1-1v-8a1 1 0 01.293-.707L6 8.586V4a1 1 0 011-1V2z"></path>
                  </svg>
                </div>
                <span class="text-sm bg-white/20 px-3 py-1 rounded-full">2 Proje</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">Podyum Tasarımları</h3>
              <p class="text-white/90 text-sm">Profesyonel sahne çözümleri</p>
            </div>
            
            <!-- Örnek Projeler Mini Grid -->
            <div class="p-4">
              <div class="grid grid-cols-3 gap-2 mb-4">
                {podyumProjects.map((project) => (
                  <div class="aspect-square rounded-lg overflow-hidden">
                    <img 
                      src={project.mainImage} 
                      alt={project.title}
                      class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                    />
                  </div>
                ))}
                <!-- Boş alan için placeholder -->
                <div class="aspect-square rounded-lg bg-grey/10 flex items-center justify-center">
                  <svg class="w-6 h-6 text-grey/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
              </div>
              
              <!-- Özellikler -->
              <div class="space-y-1.5 mb-4">
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-2 flex-shrink-0"></span>
                  Özel Tasarım
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-2 flex-shrink-0"></span>
                  Güvenlik Standartları
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-2 flex-shrink-0"></span>
                  Hızlı Kurulum
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-2 flex-shrink-0"></span>
                  Estetik Görünüm
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-2 flex-shrink-0"></span>
                  Teknik Destek
                </div>
                <div class="flex items-center text-xs text-grey">
                  <span class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-2 flex-shrink-0"></span>
                  Ses & Işık Teknolojisi
                </div>
              </div>
              
              <!-- Buton -->
              <a 
                href="/projeler?category=podyum-tasarimlari" 
                class="w-full inline-flex items-center justify-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors"
              >
                Tüm Projeleri Görüntüle
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Grup Katılım Stantları Kartı (Koşullu) -->
          {hasGrupKatilimProjects && (
            <div class="group bg-white rounded-xl shadow-sm border border-grey/10 overflow-hidden hover:shadow-lg transition-all duration-300 animate-on-scroll md:col-span-2 lg:col-span-1">
              <!-- Header -->
              <div class="bg-gradient-to-r from-green-600 to-green-700 p-6 text-white">
                <div class="flex items-center justify-between mb-4">
                  <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                  </div>
                  <span class="text-sm bg-white/20 px-3 py-1 rounded-full">{grupKatilimProjects.length} Proje</span>
                </div>
                <h3 class="text-xl font-semibold mb-2">Grup Katılım Stantları</h3>
                <p class="text-white/90 text-sm">Güçlü birliktelik çözümleri</p>
              </div>
              
              <!-- Örnek Projeler Mini Grid -->
              <div class="p-4">
                <div class="grid grid-cols-3 gap-2 mb-4">
                  {grupKatilimProjects.map((project) => (
                    <div class="aspect-square rounded-lg overflow-hidden">
                      <img 
                        src={project.mainImage} 
                        alt={project.title}
                        class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                      />
                    </div>
                  ))}
                  {/* Boş alanlar için placeholder */}
                  {Array.from({length: 3 - grupKatilimProjects.length}).map(() => (
                    <div class="aspect-square rounded-lg bg-grey/10 flex items-center justify-center">
                      <svg class="w-6 h-6 text-grey/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                      </svg>
                    </div>
                  ))}
                </div>
                
                <!-- Özellikler -->
                <div class="space-y-1.5 mb-4">
                  <div class="flex items-center text-xs text-grey">
                    <span class="w-1.5 h-1.5 bg-green-600 rounded-full mr-2 flex-shrink-0"></span>
                    Maliyet Paylaşımı
                  </div>
                  <div class="flex items-center text-xs text-grey">
                    <span class="w-1.5 h-1.5 bg-green-600 rounded-full mr-2 flex-shrink-0"></span>
                    Güçlü Sunum
                  </div>
                  <div class="flex items-center text-xs text-grey">
                    <span class="w-1.5 h-1.5 bg-green-600 rounded-full mr-2 flex-shrink-0"></span>
                    Koordineli Tasarım
                  </div>
                  <div class="flex items-center text-xs text-grey">
                    <span class="w-1.5 h-1.5 bg-green-600 rounded-full mr-2 flex-shrink-0"></span>
                    Ortak Alanlar
                  </div>
                  <div class="flex items-center text-xs text-grey">
                    <span class="w-1.5 h-1.5 bg-green-600 rounded-full mr-2 flex-shrink-0"></span>
                    Tek Koordinasyon
                  </div>
                  <div class="flex items-center text-xs text-grey">
                    <span class="w-1.5 h-1.5 bg-green-600 rounded-full mr-2 flex-shrink-0"></span>
                    Sinerji Etkisi
                  </div>
                </div>
                
                <!-- Buton -->
                <a 
                  href="/projeler?category=grup-katilim" 
                  class="w-full inline-flex items-center justify-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors"
                >
                  Tüm Projeleri Görüntüle
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          )}

        </div>

        <!-- Alt Bilgi Bölümü -->
        <div class="text-center animate-on-scroll">
          <div class="bg-cream rounded-2xl p-8 md:p-12">
            <h3 class="text-2xl font-semibold text-navy mb-4">Özel Tasarım Hizmeti</h3>
            <p class="text-body text-grey max-w-2xl mx-auto mb-6">
              Hayalinizdeki stant tasarımını gerçeğe dönüştürüyoruz. Sınırsız yaratıcılık ve özel çözümlerle markanızı en güçlü şekilde temsil ediyoruz.
            </p>
            <div class="flex flex-wrap justify-center gap-4 text-sm text-grey mb-6">
              <span class="flex items-center">
                <svg class="w-4 h-4 text-orange mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                3D Tasarım & Görselleştirme
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 text-orange mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Profesyonel Kurulum
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 text-orange mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Fuar Boyunca Destek
              </span>
            </div>
            <a 
              href="/iletisim" 
              class="inline-flex items-center px-8 py-3 bg-orange text-white font-semibold rounded-lg hover:bg-orange/90 transition-colors"
            >
              Ücretsiz Teklif Alın
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- Process Section -->
  <section class="py-section-lg bg-cream">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-12 md:mb-16 animate-on-scroll px-4 md:px-0">
          <h2 class="section-heading mb-6">
            Çalışma Sürecimiz
          </h2>
          <p class="text-body text-grey max-w-3xl mx-auto">
            Profesyonel yaklaşımımızla, projelerinizi baştan sona titizlikle yönetiyoruz.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 px-4 md:px-0">
          <!-- Step 1 -->
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 md:w-16 md:h-16 bg-orange rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 text-white font-bold text-lg md:text-xl">
              1
            </div>
            <h3 class="text-lg md:text-h5 font-semibold text-navy mb-2 md:mb-3">Konsept & Tasarım</h3>
            <p class="text-body text-grey">
              İhtiyaçlarınızı analiz ederek, markanıza uygun konsept geliştiriyoruz.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 md:w-16 md:h-16 bg-orange rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 text-white font-bold text-lg md:text-xl">
              2
            </div>
            <h3 class="text-lg md:text-h5 font-semibold text-navy mb-2 md:mb-3">3D Görselleştirme</h3>
            <p class="text-body text-grey">
              Tasarımınızı 3D modellerle görselleştirerek, onayınıza sunuyoruz.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 md:w-16 md:h-16 bg-orange rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 text-white font-bold text-lg md:text-xl">
              3
            </div>
            <h3 class="text-lg md:text-h5 font-semibold text-navy mb-2 md:mb-3">Üretim & Kalite</h3>
            <p class="text-body text-grey">
              Yüksek kalite standartlarında üretim yaparak, her detayı kontrol ediyoruz.
            </p>
          </div>

          <!-- Step 4 -->
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 md:w-16 md:h-16 bg-orange rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 text-white font-bold text-lg md:text-xl">
