import projectsData from '../data/projects.json';

// Proje verilerini hazÄ±rla ve sÄ±rala
// 1. YÄ±la gÃ¶re sÄ±rala (en yeni â†’ en eski)
// 2. AynÄ± yÄ±ldaki projeleri alfabetik sÄ±rala (A â†’ Z)
const projects = projectsData.projects.sort((a, b) => {
  // Tarihleri sayÄ±ya Ã§evir (Ã¶rn: "2023" â†’ 2023)
  const yearA = parseInt(a.date);
  const yearB = parseInt(b.date);
  
  // Ã–nce yÄ±la gÃ¶re sÄ±rala (bÃ¼yÃ¼kten kÃ¼Ã§Ã¼ÄŸe - en yeni en Ã¼stte)
  if (yearA !== yearB) {
    return yearB - yearA;
  }
  
  // AynÄ± yÄ±lsa, baÅŸlÄ±ÄŸa gÃ¶re alfabetik sÄ±rala (A-Z)
  return a.title.localeCompare(b.title, 'tr', { sensitivity: 'base' });
});

const categories = projectsData.categories;
