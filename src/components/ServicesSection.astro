            </div>
          </div>
        </div>
        
        <!-- Hizmetlerimiz Button -->
        <div class="mt-8 animate-on-scroll">
          <a href="/hizmetler" class="btn-primary">
            Hizmetlerimiz
          </a>
        </div>

        <!-- JavaScript for Service Indicator Animation -->
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const serviceItems = document.querySelectorAll('.service-item');
            const currentServiceElement = document.getElementById('current-service');
            
            serviceItems.forEach((item) => {
              const htmlItem = item as HTMLElement;
              htmlItem.addEventListener('mouseenter', function(this: HTMLElement) {
                const serviceNumber = this.getAttribute('data-service');
                if (currentServiceElement && serviceNumber) {
                  currentServiceElement.textContent = serviceNumber;
                }
              });
              
              htmlItem.addEventListener('mouseleave', function() {
                if (currentServiceElement) {
                  currentServiceElement.textContent = '01'; // Default back to 01
                }
              });
            });
          });
        </script>
      </div>
      
      <!-- Right Image -->
      <div class="animate-on-scroll">
        <img 
          src="/services-image.jpg" 
          alt="Türkel Global Stands Hizmetleri" 
          class="w-full h-auto rounded-lg"
          loading="lazy"
          width="1024"
          height="784"
        />
      </div>
    </div>
  </div>
</section>
